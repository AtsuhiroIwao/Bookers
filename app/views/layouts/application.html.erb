<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/5ceff25510.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm bg-dark text-white">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">


          <a class="navbar-brand p-3 text-white"  href="/"><span>Bookers</span></a>



<div class="collapse navbar-collapse" id="navbarNavDropdown">
<ul class="navbar-nav ml-auto">


    <% if user_signed_in? %>
    <li class="nav-item">

      <%= link_to user_path(current_user.id), class: 'nav-link text-white' do %>
      <i class="fas fa-home"></i>Home
      <% end %>
      </li>

      <li class="nav-item">

        <%= link_to users_path, class: 'nav-link text-white' do %>
        <i class="fas fa-users"></i>Users
        <% end %>
      </li>

      <li class="nav-item">

      <%= link_to books_path, class: 'nav-link text-white' do %>
      <i class="fas fa-book-open"></i>Books
      <% end %>
      </li>

      <li class="nav-item">

      <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-white' do %>
      <i class="fas fa-sign-out-alt"></i>Log out
      <% end %>
      </li>

    <% else %>
      <li class="nav-item">

        <%= link_to root_path, class: 'nav-link text-white' do %>
        <i class="fas fa-home"></i>Home
        <% end %>
      </li>

      <li class="nav-item">

        <%= link_to about_path, class: 'nav-link text-white' do %>
         <i class="fas fa-link"></i>About
         <% end %>
      </li>

      <li class="nav-item">

        <%= link_to new_user_registration_path, class: 'nav-link text-white' do %>
        <i class="fas fa-user-plus"></i>Sign up
        <% end %>
      </li>



      <li class="nav-item">

        <%= link_to new_user_session_path, class: 'nav-link text-white' do %>
        <i class="fas fa-sign-in-alt"></i>Log in
        <% end %>
      </li>


    <% end %>
    </ul>
    </div>
    </div>
    </nav>
      <div class="social"></div>
  </header>

  <main class="mb-auto">
    <%= yield %>
    </main>

  <footer>

    <h6 class="text-center mt-5 mb-5">CopyRight Infratop.inc</h6>

  </footer>



<% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>

  </body>


</html>