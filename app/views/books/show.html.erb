<% if flash[:notice] %>
  <div class="show" role="alert">
    <div class="created">
<%= notice %>
<% end %>
</div>
</div>
<p id="notice"></p>
<div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>

  <table class="form-inline table">
    <tbody>
      <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(@user.id),class: "btn btn-light btn-outline-secondary w-75", method: :get do %>
     <i class="fas fa-user-cog"></i>
  <% end %>
  </div>


      <h2 class="mt-3">New book</h2>
  <%= form_with model: @new_book,url: books_path do |f| %>
  <div class="mt-3 mb-3">
    <h5>Title</h5>
  </div>
      <%= f.text_field :title %>
  <div class="mt-3 mb-3">
    <h5>Opinion</h5>
  </div>
      <%= f.text_area :body %>
  <button class="btn btn-lg btn-success" type="submit">
  Create Book
  </button>
  <% end %>
  </div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
  <tbody>
  <tr>
  <td>
    <%= link_to image_tag(@user.get_profile_image(70,70)),user_path(@user.id) %><br>
    <%= link_to @user.name,user_path(@user.id) %>
  </td>


 <td><%= link_to @book.title,book_path(@book.id) %></td>
 <td><%= @book.body %></td>

  <% if @book.user == current_user %>

  <td>

      <%= link_to edit_book_path(@book.id) do %>
      <button type="button" class="btn btn-success">Edit
      </button>
      <% end %>
  </td>

    <td>
      
      <%= link_to book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか？" do %>
      <button class="btn btn-danger">Destroy
      </button>
      <% end %>
    </td>
  <% end %>
</tr>
</tbody>
</table>
</div>
</div>
</div>
